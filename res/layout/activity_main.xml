<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main" >
	<FrameLayout 
	    android:id="@+id/main_navi"
	    android:layout_width="match_parent"
	    android:layout_gravity="top"
	    android:layout_height="44dp" >
	    <TextView
	        android:id="@+id/main_navi_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="22sp"
	        android:textColor="@color/black_deep"
	        android:text="@string/title" />
	    <ImageView 
	        android:id="@+id/main_navi_right"
	        android:layout_width="40dp"
	        android:layout_height="30dp"
	        android:layout_gravity="right|center_vertical"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/icon_more_btn" />
	</FrameLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="4dp"
	    android:layout_gravity="top"
	    android:layout_marginTop="44dp"
	    android:background="#FFA02D4F" />
	<TextView
	    android:id="@+id/main_sub_title"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:layout_gravity="top"
	    android:layout_marginTop="48dp"
	    android:gravity="center"
	    android:textSize="16sp"
	    android:textColor="@color/black_light"
	    android:background="@color/title"
	    android:text="@string/home_title" />
	<cn.gov.jyq.view.PTRListView
	    android:id="@+id/main_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="top"
	    android:layout_marginTop="88dp" />
	<ListView
	    android:id="@+id/main_cate"
	    android:layout_width="120dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="top|right"
	    android:layout_marginTop="20dp"
	    android:layout_marginRight="60dp"
	    android:background="@drawable/v2_bg_black"
	    android:visibility="gone" />
</FrameLayout>
